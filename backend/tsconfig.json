{
	"compilerOptions": {
		 /* Base Options: */
		 "esModuleInterop": true,
		 "skipLibCheck": true,
		 "target": "es2022",
		 "allowJs": true,
		 "resolveJsonModule": true,
		 "moduleDetection": "force",
		 "isolatedModules": true,
		 "module": "commonjs",
		 "outDir": "dist",
		 "sourceMap": true,
		 /* Strictness */
		 "strict": true,
		 "noUncheckedIndexedAccess": true,
		 "noImplicitOverride": true,

	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}